# Claudio Configuration

# Timezone
TZ=Asia/Seoul

# Server
CLAUDIO_HOST=0.0.0.0
CLAUDIO_PORT=17280
CLAUDIO_API_URL=http://localhost:17280

# Default Project (used by n8n workflows and scripts)
CLAUDIO_DEFAULT_PROJECT=default

# Dashboard (Next.js uses PORT natively)
PORT=17281

# Storage
CLAUDIO_DB_PATH=data/claudio.db

# Logging
CLAUDIO_LOG_LEVEL=info

# Defaults
CLAUDIO_DEFAULT_TIMEOUT=300
CLAUDIO_DISALLOWED_TOOLS=Write,Edit,MultiEdit,NotebookEdit
CLAUDIO_ISOLATED_DIR=/tmp/claudio-isolated

# Slack
SLACK_APP_TOKEN=
SLACK_BOT_TOKEN=
SLACK_WEBHOOK_MENTION=http://localhost:5678/webhook/slack-mention
SLACK_WEBHOOK_MESSAGE=http://localhost:5678/webhook/slack-message
SLACK_WEBHOOK_REACTION=http://localhost:5678/webhook/slack-reaction
SLACK_WEBHOOK_FEEDBACK=http://localhost:5678/webhook/slack-feedback

# Semantic Search
SEMANTIC_SEARCH_ENABLED=false
SEMANTIC_SEARCH_MIN_SCORE=0.5
SEMANTIC_SEARCH_TOP_K=5

# n8n (Docker internal URLs)
N8N_URL=http://localhost:5678
N8N_API_KEY=
N8N_API_URL=http://host.docker.internal:17280
N8N_DASHBOARD_URL=http://host.docker.internal:17281
N8N_WEBHOOK_URL=http://host.docker.internal:5678

# MR Review
MR_REVIEW_CHANNEL=
